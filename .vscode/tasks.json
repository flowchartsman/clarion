{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build_Mktheme",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/mktheme"
            },
            "command": "go",
            "args": [
                "build",
            ],
            "problemMatcher": [
                "$go",
            ]
        },
        {
            "label": "Watch_Theme",
            "dependsOn": [
                "Build_Mktheme",
            ],
            "dependsOrder": "sequence",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/mktheme"
            },
            "isBackground": true,
            "command": "./mktheme",
            "args": [
                "-watch",
                "../SPEC.md",
                "../themes" 
            ],
            "problemMatcher": {
                "owner": "mktheme",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern":{
                    "regexp": "^mktheme error:",
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "building themes...",
                    "endsPattern": "complete!",
                },
            }
        },
        {
            "label": "Watch_Theme_Stop",
            "type": "shell",
            "command": "killall mktheme"
        },
    ]
}