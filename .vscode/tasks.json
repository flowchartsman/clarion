{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build mktheme",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/mktheme"
            },
            "command": "go",
            "args": [
                "build",
            ],
            "problemMatcher": [
                "$go",
            ]
        },
        {
            "label": "Watch Theme",
            "dependsOn": [
                "Build mktheme",
            ],
            "dependsOrder": "sequence",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/mktheme"
            },
            "isBackground": true,
            "command": "./mktheme",
            "args": [
                "-watch",
                "../SPEC.md",
                ".." 
            ],
            "problemMatcher": {
                "owner": "mktheme",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern":{
                    "regexp": "^mktheme error:",
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "building themes...",
                    "endsPattern": "complete!",
                },
            }
        },
        {
            "label": "Rebuild Theme",
            "dependsOn": [
                "Build mktheme",
            ],
            "dependsOrder": "sequence",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/mktheme"
            },
            "isBackground": false,
            "command": "./mktheme",
            "args": [
                "../SPEC.md",
                ".." 
            ],
            "problemMatcher": {
                "owner": "mktheme",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern":{
                    "regexp": "^mktheme error:",
                } 
            }
        },
        {
            "label": "Terminate Tasks",
            "command": "echo ${input:terminate}",
            "type": "shell",
            "problemMatcher": []
        },
    ],
    "inputs": [
        {
          "id": "terminate",
          "type": "command",
          "command": "workbench.action.tasks.terminate",
          "args": "terminateAll"
        }
    ]
}