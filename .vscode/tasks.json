{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "isBackground": true,
            "label": "watch",
            "command": "reflex",
            "args": [
                "-d", "none",
                "-r", "'mktheme/.*(tmpl|go)$'",
                "--",
                "sh",
                "-c",
                "cd mktheme && go run main.go ../themes" 
            ],
            "problemMatcher": {
                "owner": "reflex",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern":{
                    "regexp": "^NEVER SEE THIS$",
                }
            }
        },
        {
            "label": "stop watch",
            "type": "shell",
            "command": "killall reflex"
        },
    ]
}