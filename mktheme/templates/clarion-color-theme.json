    //{{with .Base}}
    "semanticTokenColors": {
        // "namespace": {
        //     "bold": true,
        //     "italic": false
        // },
        "function.definition": {
            "fontStyle": "bold"
        },
        "type.definition": {
            "fontStyle": "bold"
        },
        "variable.definition": {
            "foreground": "{{.Fg.HexAlpha 58}}"
        },
        "variable.readonly": {
            "foreground": "{{.Fg.Hex}}",
            "fontStyle": "italic"
        },
        "variable.defaultLibrary": {
            "foreground": "{{.Fg.Hex}}",
            "fontStyle": "italic"
        },
        "variable": {}
    },
    "tokenColors": [
        {
            "scope": [
                "string entity.name.import.go"
            ],
            "settings": {
                "foreground": "{{.Fg.Hex}}"
            }
        },
        {
            "scope": [
                "comment.block",
                "comment.block.documentation",
                "comment.line",
                "comment",
                "string.quoted.docstring"
            ],
            "settings": {
                //"foreground": "{{.Darker.Darker.Darker.Hex}}",
                //"foreground": "{{.FgLight.Hex}}",
                "foreground": "{{.Fg.HexAlpha 30}}",
                "fontStyle": "italic"
            }
        },
        {
            "scope": [
                "string"
            ],
            "settings": {
                "foreground": "{{.FgLight.Hex}}"
            }
        },
        {
            "scope": [
                "constant.other.placeholder",
                "constant.character.escape"
            ],
            "settings": {
                "foreground": "{{.Fg.Hex}}",
                "fontStyle": "italic"
            }
        },
        {
            "scope": [
                "punctuation.definition.string",
                "storage.type.string.python"
            ],
            "settings": {
                "foreground": "{{.Fg.Hex}}"
            }
        },
        {
            "scope": [
                "markup.italic"
            ],
            "settings": {
                "fontStyle": "italic"
            }
        },
        //landmarks
        {
            "scope": [
                "entity.name.section.group-title",
                "keyword.const",
                "keyword.package",
                //"keyword.function",
                //"keyword.var",
                //"keyword.type",
                "markup.heading",
                "storage.type.function",
                "storage.type.import",
                "storage.type.namespace",
                "support.type.object.module",
                "markup.bold",
                "markup.inline.raw",
                "markup.raw.monospace",
                "markup.fenced_code.block",
                "keyword.control.landmark"
            ],
            "settings": {
                "fontStyle": "bold"
            }
        },
        {
            "scope": [
                "support.type.property-name"
            ],
            "settings": {
                "foreground": "{{.Fg.Hex}}",
                "fontStyle": "bold"
            }
        }
    ]
    // {{end}}
}